<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#002147"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LeagueFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:gravity="center"
        android:background="@drawable/deposit_background">

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dice_club_o_logo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_wallet_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="Wallet"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_RS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="Rs."/>

                <TextView
                    android:id="@+id/wallet_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:text="0"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp">

            <TextView
                android:id="@+id/depositButton"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="40dp"
                android:background="@drawable/payment_background"
                android:gravity="center"
                android:text="Deposit"
                android:textColor="#002147"
                android:textSize="@dimen/_20sdp" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/deposit_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_currently_running_leagues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Cuurently Running Leagues"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp">

            <TextView
                android:id="@+id/firstLeague"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#002147"
                android:background="@drawable/payment_background"
                android:textSize="@dimen/_15sdp"
                android:text="@string/first_league_text"
                android:drawableLeft="@drawable/ic_baseline_play_arrow_24"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp">

            <TextView
                android:id="@+id/secondLeague"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#002147"
                android:background="@drawable/payment_background"
                android:text="@string/second_league_text"
                android:textSize="@dimen/_15sdp"
                android:drawableLeft="@drawable/ic_baseline_play_arrow_24"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp">

            <TextView
                android:id="@+id/thirdLeague"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#002147"
                android:background="@drawable/payment_background"
                android:text="@string/third_league_text"
                android:textSize="@dimen/_15sdp"
                android:drawableLeft="@drawable/ic_baseline_play_arrow_24"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/deposit_background">

        <ImageView
            android:id="@+id/share"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/w"/>

        <TextView
            android:id="@+id/text_whatsapp_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_20sdp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Share Minimum 5 Members get Rs.10"/>

    </LinearLayout>

</LinearLayout>